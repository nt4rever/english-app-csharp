                    xmlns:vm="clr-namespace:Page_Navigation_App.ViewModel"
                    xmlns:view="clr-namespace:Page_Navigation_App.View">

    <DataTemplate DataType="{x:Type vm:HomeVM}">
        <view:Home />
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:TranslateVM}">
        <view:Translate />
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:GrammarVM}">
        <view:Grammar />
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:QuizzVM}">
        <view:Quizz />
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:MyVocabVM}">
        <view:MyVocab />
